option domain-name "lan";
option domain-name-servers {{ansible_facts['dns']['nameservers'] | join(', ')}};

default-lease-time 86400;
max-lease-time 172800;

ddns-update-style none;

authoritative;

subnet {{ fort_subnet }} netmask 255.255.255.0 {
    range {{ fort_subnet | ansible.utils.ipmath(100) }} {{ fort_subnet | ansible.utils.ipmath(200) }};
    option routers {{ fort_subnet | ansible.utils.ipmath(1) }};
    option ntp-servers {{ fort_subnet | ansible.utils.ipmath(1) }};
}
